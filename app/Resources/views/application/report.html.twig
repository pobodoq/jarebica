{% extends 'base.html.twig' %}

{% block body %}
    <div id="nav" class="col-xs-12">
        <div class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"><img src="{{ asset('images/logo.png') }}"/></a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="#">Lovna sezona</a></li>
                        <li><a href="#">Pravilnik</a></li>
                        <li><a href="#">Kontakt</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="section" class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
        <h3> FORMA ZA IZVJEŠĆA </h3>
        <div id="form" class="col-xs-12 col-sm-6">
            <select class="col-xs-12 onClick" name="section">
                <option id="sekcija1">
                    sekcija 1
                </option>
                <option id="sekcija2">
                    sekcija 2
                </option>
            </select>
            <div class="form-field col-xs-12 onClick" >
                <label for="ime" class="col-xs-12">IME: </label>
                <input type="text" id="ime" class="col-xs-12" name="ime"/>
            </div>
            <div class="form-field col-xs-12 onClick" >
                <label for="prezime" class="col-xs-12">PREZIME: </label>
                <input type="text" id="prezime" class="col-xs-12" name="prezime"/>
            </div>
            <div class="form-field col-xs-12 onClick" >
                <label for="otac" class="col-xs-12">OTAC: </label>
                <input type="text" id="otac" class="col-xs-12" name="otac"/>
            </div>
            <div class="form-field col-xs-12 onClick" >
                 <label for="jbmg" class="col-xs-12">JMBG: </label>
                 <input type="text" id="jbmg" class="col-xs-12" name="jbmg"/>
            </div>
            <button class="col-xs-12"> Dodaj lovca </button>
        </div>
        <div id="list" class="col-xs-12 col-sm-6">

        </div>
        <a href="#" class="col-xs-12">Isprintajte izvještaj</a>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/izjvestaj.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/izjvestaj.js') }}"></script>
{% endblock %}
